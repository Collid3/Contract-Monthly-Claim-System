@{
}

@model List<Claim>

<table>
    <thead>
        <tr>
            <th>ClaimID</th>
            <th>Amount</th>
            <th>Description</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @{
            foreach (var claim in Model) {
                <tr>
                    <td>@claim.Id</td>
                    <td>@(@claim.HourlyRate * @claim.HoursWorked)</td>
                    <td>@claim.AdditionalNotes</td>
                    <td>@claim.SubmissionDate</td>
                    <td>@claim.Status</td>
                    <td>
                        <button asp-action="verify-claim">Verify</button>
                        <button asp-action="reject-claim">Reject</button>
                    </td>
                </tr>
            }
        }
    </tbody>

</table>