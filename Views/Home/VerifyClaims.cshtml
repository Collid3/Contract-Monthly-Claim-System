@{
}

@model List<Claim>

<table class="table">
    <thead>
        <tr>
            <th>ClaimID</th>
            <th>Amount</th>
            <th>Description</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @{
            foreach (var claim in Model) {
                <tr>
                    <td>@claim.Id</td>
                    <td>@(@claim.HourlyRate * @claim.HoursWorked)</td>
                    <td>@claim.AdditionalNotes</td>
                    <td>@claim.SubmissionDate</td>
                    <td>@claim.Status</td>
                    <td>
                        <a class="px-4 py-2 text-decoration-none rounded" style="background-color: green; color: white;" asp-action="ApproveClaim" asp-route-id="@claim.Id">Verify</a>

                        <a class="px-4 py-2 text-decoration-none rounded" style="background-color: red; color: white;"  asp-action="RejectClaim" asp-route-id="@claim.Id">Reject</a>
                    </td>
                </tr>
            }
        }
    </tbody>

</table>